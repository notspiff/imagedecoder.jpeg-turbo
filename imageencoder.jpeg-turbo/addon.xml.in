<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="imageencoder.jpeg-turbo"
  version="1.0.0"
  name="jpeg-turbo image encoder"
  provider-name="spiff">
  <requires>
    <c-pluff version="0.1"/>
  </requires>
  <extension
    point="kodi.imageencoder"
    library_@PLATFORM@="@LIBRARY_FILENAME@"
    mimetype="image/jpeg|image/jpg|image/tbn"/>
  <extension point="xbmc.addon.metadata">
    <summary>jpeg-turbo based image decoder</summary>
    <description>jpeg-turbo based image decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
